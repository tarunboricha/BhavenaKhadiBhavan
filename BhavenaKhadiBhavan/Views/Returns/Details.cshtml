@model Return
@{
    ViewData["Title"] = $"Return Details - {Model.ReturnNumber}";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h2>
                <i class="fas fa-undo me-2"></i>
                Return Details - @Model.ReturnNumber
                <span class="badge @(Model.Status switch
                      {
                          "Completed" => "bg-success",
                          "Pending" => "bg-warning text-dark",
                          "Cancelled" => "bg-secondary",
                          "Processing" => "bg-primary",
                          _ => "bg-info"
                      }) ms-2">
                    @Model.Status
                </span>
            </h2>
            <div>
                @if (Model.Status == "Pending")
                {
                    <form method="post" action="@Url.Action("ProcessReturn", "Returns", new { id = Model.Id })"
                          style="display: inline;" onsubmit="return confirm('Process this return and issue refund?')">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check me-1"></i>Process Return
                        </button>
                    </form>
                }
                <a href="@Url.Action("PrintReceipt", "Returns", new { id = Model.Id })"
                   class="btn btn-outline-secondary" target="_blank">
                    <i class="fas fa-print me-1"></i>Print Receipt
                </a>
                <a href="@Url.Action("Details", "Sales", new { id = Model.SaleId })" class="btn btn-outline-primary">
                    <i class="fas fa-receipt me-1"></i>Original Sale
                </a>
                <a href="@Url.Action("Index", "Returns")" class="btn btn-outline-secondary">
                    <i class="fas fa-list me-1"></i>All Returns
                </a>
            </div>
        </div>
        <hr>
    </div>
</div>

<div class="row">
    <!-- Return Summary -->
    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Return Summary
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-5">
                        <strong>Return #:</strong>
                    </div>
                    <div class="col-sm-7">
                        @Model.ReturnNumber
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-5">
                        <strong>Date:</strong>
                    </div>
                    <div class="col-sm-7">
                        @Model.ReturnDate.ToString("dd/MM/yyyy")
                        <br><small class="text-muted">@Model.ReturnDate.ToString("HH:mm")</small>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-5">
                        <strong>Original Sale:</strong>
                    </div>
                    <div class="col-sm-7">
                        <a href="@Url.Action("Details", "Sales", new { id = Model.SaleId })" class="text-decoration-none">
                            @Model.Sale?.InvoiceNumber
                        </a>
                        <br><small class="text-muted">@Model.Sale?.SaleDate.ToString("dd/MM/yyyy")</small>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-5">
                        <strong>Customer:</strong>
                    </div>
                    <div class="col-sm-7">
                        @Model.CustomerName
                        @if (!string.IsNullOrEmpty(Model.Sale?.CustomerPhone))
                        {
                            <br>
                        
                            <small class="text-muted">@Model.Sale.CustomerPhone</small>
                        }
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-5">
                        <strong>Reason:</strong>
                    </div>
                    <div class="col-sm-7">
                        <span class="badge bg-light text-dark">@Model.Reason</span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-5">
                        <strong>Items Count:</strong>
                    </div>
                    <div class="col-sm-7">
                        <span class="badge bg-info">@Model.ReturnItems.Sum(ri => ri.ReturnQuantity).ToString("0.###")</span>
                        <br><small class="text-muted">@Model.ReturnItems.Count product(s)</small>
                    </div>
                </div>

                <hr>

                <!-- Financial Summary -->
                <div class="row mb-2">
                    <div class="col-sm-5">Items Subtotal:</div>
                    <div class="col-sm-7 text-end">₹@Model.SubTotal.ToString("N2")</div>
                </div>

                @if (Model.DiscountAmount > 0)
                {
                    <div class="row mb-2">
                        <div class="col-sm-5 text-success">
                            <i class="fas fa-tag me-1"></i>Discount:
                        </div>
                        <div class="col-sm-7 text-end text-success">-₹@Model.DiscountAmount.ToString("N2")</div>
                    </div>
                }

                @if (Model.GSTAmount > 0)
                {
                    <div class="row mb-2">
                        <div class="col-sm-5">GST Amount:</div>
                        <div class="col-sm-7 text-end">₹@Model.GSTAmount.ToString("N2")</div>
                    </div>
                }

                <hr>

                <div class="row mb-3">
                    <div class="col-sm-5">
                        <strong>Refund Amount:</strong>
                    </div>
                    <div class="col-sm-7 text-end">
                        <h4 class="text-success mb-0">₹@Model.TotalAmount.ToString("N2")</h4>
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.Notes))
                {
                    <div class="row mb-2">
                        <div class="col-12">
                            <strong>Notes:</strong>
                            <br>
                            <small class="text-muted">@Model.Notes</small>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Return Items -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-box me-2"></i>
                    Returned Items (@Model.ReturnItems.Count)
                    @if (Model.DiscountAmount > 0)
                    {
                        <span class="badge bg-success ms-2">
                            <i class="fas fa-tag me-1"></i>With Discounts
                        </span>
                    }
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Product</th>
                                <th>Returned Qty</th>
                                <th>Unit Price</th>
                                <th>Subtotal</th>
                                @if (Model.DiscountAmount > 0)
                                {
                                    <th>Discount</th>
                                }
                                <th>GST</th>
                                <th>Refund Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ReturnItems)
                            {
                                <tr>
                                    <td>
                                        <div>
                                            <strong>@item.ProductName</strong>
                                            @if (item.Product != null)
                                            {
                                                <div class="mt-1">
                                                    @if (!string.IsNullOrEmpty(item.Product.Color))
                                                    {
                                                        <span class="badge bg-light text-dark me-1">@item.Product.Color</span>
                                                    }
                                                    @if (!string.IsNullOrEmpty(item.Product.Size))
                                                    {
                                                        <span class="badge bg-light text-dark">@item.Product.Size</span>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">
                                            @item.ReturnQuantity.ToString("0.###") @(item.UnitOfMeasure ?? "Piece")
                                        </span>
                                    </td>
                                    <td>
                                        <strong>₹@item.UnitPrice.ToString("N2")</strong>
                                        <br><small class="text-muted">per @(item.UnitOfMeasure ?? "piece")</small>
                                    </td>
                                    <td>
                                        <strong>₹@((item.UnitPrice * item.ReturnQuantity).ToString("N2"))</strong>
                                        <br><small class="text-muted">@item.ReturnQuantity.ToString("0.###") × ₹@item.UnitPrice.ToString("N2")</small>
                                    </td>
                                    @if (Model.DiscountAmount > 0)
                                    {
                                        <td>
                                            @if (item.DiscountAmount > 0)
                                            {
                                                <span class="text-success">-₹@item.DiscountAmount.ToString("N2")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    }
                                    <td>
                                        <div>
                                            <strong>@item.GSTRate%</strong>
                                            <br><small class="text-muted">₹@item.GSTAmount.ToString("N2")</small>
                                        </div>
                                    </td>
                                    <td>
                                        <strong class="text-success">₹@item.LineTotal.ToString("N2")</strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="3">Totals:</th>
                                <th>₹@Model.ReturnItems.Sum(i => i.UnitPrice * i.ReturnQuantity).ToString("N2")</th>
                                @if (Model.DiscountAmount > 0)
                                {
                                    <th class="text-success">-₹@Model.DiscountAmount.ToString("N2")</th>
                                }
                                <th>₹@Model.GSTAmount.ToString("N2")</th>
                                <th class="text-success">₹@Model.TotalAmount.ToString("N2")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                @if (Model.DiscountAmount > 0)
                {
                    <div class="alert alert-success mt-3">
                        <h6><i class="fas fa-tag me-2"></i>Discount Information</h6>
                        <p class="mb-0">
                            <strong>Original Sale Discount:</strong> @((Model.Sale?.DiscountPercentage ?? 0).ToString("0.##"))%
                            <br>
                            <strong>Proportional Discount Applied:</strong> ₹@Model.DiscountAmount.ToString("N2")
                            <br>
                            <small class="text-muted">
                                The original sale discount has been proportionally applied to the returned items.
                                Customer receives the same discount benefit on the refund.
                            </small>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Additional Information -->
<div class="row">
    <!-- Processing History -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-history me-2"></i>Processing History
                </h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-primary"></div>
                        <div class="timeline-content">
                            <h6 class="timeline-title">Return Created</h6>
                            <p class="timeline-text">
                                Return @Model.ReturnNumber was created for @Model.ReturnItems.Count item(s)
                                <br>
                                <small class="text-muted">@Model.ReturnDate.ToString("dd/MM/yyyy HH:mm")</small>
                            </p>
                        </div>
                    </div>

                    @if (Model.Status == "Completed")
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">Return Processed</h6>
                                <p class="timeline-text">
                                    Refund of ₹@Model.TotalAmount.ToString("N2") processed successfully
                                    <br>
                                    <small class="text-muted">Stock restored to inventory</small>
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Original Sale Information -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-receipt me-2"></i>Original Sale Information
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Sale != null)
                {
                    <div class="row mb-2">
                        <div class="col-4"><strong>Invoice #:</strong></div>
                        <div class="col-8">
                            <a href="@Url.Action("Details", "Sales", new { id = Model.Sale.Id })" class="text-decoration-none">
                                @Model.Sale.InvoiceNumber
                            </a>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-4"><strong>Sale Date:</strong></div>
                        <div class="col-8">@Model.Sale.SaleDate.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-4"><strong>Original Total:</strong></div>
                        <div class="col-8 text-success">₹@Model.Sale.TotalAmount.ToString("N2")</div>
                    </div>

                    @if (Model.Sale.DiscountPercentage > 0)
                    {
                        <div class="row mb-2">
                            <div class="col-4"><strong>Original Discount:</strong></div>
                            <div class="col-8 text-info">
                                @Model.Sale.DiscountPercentage.ToString("0.##")%
                                (₹@Model.Sale.DiscountAmount.ToString("N2"))
                            </div>
                        </div>
                    }

                    <div class="row mb-2">
                        <div class="col-4"><strong>Payment Method:</strong></div>
                        <div class="col-8">@Model.Sale.PaymentMethod</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-4"><strong>Total Items:</strong></div>
                        <div class="col-8">@Model.Sale.ItemCount.ToString("0.###") items</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-4"><strong>Returned Amount:</strong></div>
                        <div class="col-8 text-warning">₹@Model.Sale.ReturnedAmount.ToString("N2")</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-4"><strong>Net Amount:</strong></div>
                        <div class="col-8 text-success">₹@Model.Sale.NetAmount.ToString("N2")</div>
                    </div>

                    <div class="mt-3">
                        <a href="@Url.Action("Details", "Sales", new { id = Model.Sale.Id })" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>View Full Sale Details
                        </a>
                    </div>
                }
                else
                {
                    <p class="text-muted">Original sale information not available.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5><i class="fas fa-cogs me-2"></i>Quick Actions</h5>
                <div class="btn-group" role="group">
                    @if (Model.Status == "Pending")
                    {
                        <form method="post" action="@Url.Action("ProcessReturn", "Returns", new { id = Model.Id })"
                              style="display: inline;" onsubmit="return confirm('Process this return and issue refund?')">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check me-1"></i>Process Return & Issue Refund
                            </button>
                        </form>
                    }

                    <a href="@Url.Action("PrintReceipt", "Returns", new { id = Model.Id })"
                       class="btn btn-outline-secondary" target="_blank">
                        <i class="fas fa-print me-1"></i>Print Receipt
                    </a>

                    <a href="@Url.Action("Details", "Sales", new { id = Model.SaleId })" class="btn btn-primary">
                        <i class="fas fa-receipt me-1"></i>View Original Sale
                    </a>

                    @if (Model.Sale?.CustomerPhone != null)
                    {
                        <a href="@Url.Action("Create", "Sales", new { customerPhone = Model.Sale.CustomerPhone })" class="btn btn-info">
                            <i class="fas fa-plus me-1"></i>New Sale (Same Customer)
                        </a>
                    }

                    <a href="@Url.Action("Index", "Returns")" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-1"></i>All Returns
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add hover effects to item rows
            $('tbody tr').hover(
                function() { $(this).addClass('table-active'); },
                function() { $(this).removeClass('table-active'); }
            );

            // Add tooltips to badges
            $('[title]').tooltip();

            // Add loading state to process button
            $('form[onsubmit*="confirm"] button[type="submit"]').on('click', function() {
                const $btn = $(this);
                setTimeout(function() {
                    $btn.prop('disabled', true)
                        .html('<i class="fas fa-spinner fa-spin me-1"></i>Processing...');
                }, 100);
            });
        });
    </script>
}

<style>
    .table td {
        vertical-align: middle;
    }

    .badge {
        font-size: 0.75rem;
    }

        .badge.bg-light {
            color: #495057 !important;
            border: 1px solid #dee2e6;
        }

    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 0;
    }

    .text-decoration-none:hover {
        text-decoration: underline !important;
    }

    /* Timeline styles */
    .timeline {
        position: relative;
        padding-left: 2rem;
    }

        .timeline::before {
            content: '';
            position: absolute;
            left: 0.75rem;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #dee2e6;
        }

    .timeline-item {
        position: relative;
        margin-bottom: 2rem;
    }

    .timeline-marker {
        position: absolute;
        left: -1.5rem;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 0 2px #dee2e6;
    }

    .timeline-content {
        padding-left: 1rem;
    }

    .timeline-title {
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .timeline-text {
        margin-bottom: 0;
        font-size: 0.85rem;
    }
</style>