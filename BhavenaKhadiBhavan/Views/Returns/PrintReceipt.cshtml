@model Return
@{
    ViewData["Title"] = $"Return Receipt - {Model.ReturnNumber}";
    Layout = null; // No layout for printing
    var storeSettings = ViewBag.StoreSettings as Dictionary<string, string> ?? new Dictionary<string, string>();
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Courier New', monospace;
            font-size: 11px;
            line-height: 1.4;
            color: #333;
            background: white;
            padding: 10mm;
        }

        .receipt {
            max-width: 80mm;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 15px;
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
        }

        .store-name {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 3px;
            text-transform: uppercase;
        }

        .store-info {
            font-size: 9px;
            margin-bottom: 2px;
        }

        .receipt-title {
            font-size: 14px;
            font-weight: bold;
            margin: 10px 0;
            text-align: center;
            text-transform: uppercase;
            border: 1px solid #333;
            padding: 5px;
        }

        .return-info {
            margin-bottom: 15px;
        }

        .return-info-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 3px;
        }

        .return-info-label {
            font-weight: bold;
        }

        .separator {
            border-top: 1px dashed #333;
            margin: 10px 0;
        }

        .items-header {
            font-weight: bold;
            text-align: center;
            margin-bottom: 8px;
            text-transform: uppercase;
        }

        .item {
            margin-bottom: 8px;
            padding-bottom: 5px;
            border-bottom: 1px dotted #666;
        }

        .item:last-child {
            border-bottom: none;
        }

        .item-name {
            font-weight: bold;
            margin-bottom: 2px;
        }

        .item-details {
            display: flex;
            justify-content: space-between;
            font-size: 10px;
            margin-bottom: 1px;
        }

        .totals {
            margin-top: 10px;
            border-top: 2px solid #333;
            padding-top: 8px;
        }

        .total-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 3px;
        }

        .total-row.final {
            font-weight: bold;
            font-size: 12px;
            margin-top: 5px;
            padding-top: 5px;
            border-top: 1px solid #333;
        }

        .footer {
            margin-top: 20px;
            text-align: center;
            font-size: 9px;
            border-top: 1px dashed #333;
            padding-top: 10px;
        }

        .signature-area {
            margin-top: 20px;
            text-align: center;
        }

        .signature-line {
            border-bottom: 1px solid #333;
            width: 150px;
            margin: 20px auto 5px;
        }

        .print-info {
            margin-top: 15px;
            text-align: center;
            font-size: 8px;
            color: #666;
        }

        @@media print {
            body {
                padding: 0;
            }
            
            .receipt {
                max-width: none;
            }
            
            .print-info {
                display: none;
            }
        }

        .discount-info {
            color: #008000;
            font-style: italic;
        }

        .original-sale {
            background: #f5f5f5;
            padding: 5px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
        }

        .text-center {
            text-align: center;
        }

        .text-right {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="receipt">
        <!-- Store Header -->
        <div class="header">
            <div class="store-name">
                @(storeSettings.GetValueOrDefault("StoreName", "Khadi Store"))
            </div>
            @if (storeSettings.ContainsKey("StoreAddress"))
            {
                <div class="store-info">@storeSettings["StoreAddress"]</div>
            }
            @if (storeSettings.ContainsKey("StorePhone"))
            {
                <div class="store-info">Phone: @storeSettings["StorePhone"]</div>
            }
            @if (storeSettings.ContainsKey("StoreEmail"))
            {
                <div class="store-info">Email: @storeSettings["StoreEmail"]</div>
            }
            @if (storeSettings.ContainsKey("GSTNumber"))
            {
                <div class="store-info">GSTIN: @storeSettings["GSTNumber"]</div>
            }
        </div>

        <!-- Receipt Title -->
        <div class="receipt-title">RETURN RECEIPT</div>

        <!-- Return Information -->
        <div class="return-info">
            <div class="return-info-row">
                <span class="return-info-label">Return #:</span>
                <span>@Model.ReturnNumber</span>
            </div>
            <div class="return-info-row">
                <span class="return-info-label">Date:</span>
                <span>@Model.ReturnDate.ToString("dd/MM/yyyy HH:mm")</span>
            </div>
            <div class="return-info-row">
                <span class="return-info-label">Customer:</span>
                <span>@Model.CustomerName</span>
            </div>
            @if (!string.IsNullOrEmpty(Model.Sale?.CustomerPhone))
            {
                <div class="return-info-row">
                    <span class="return-info-label">Phone:</span>
                    <span>@Model.Sale.CustomerPhone</span>
                </div>
            }
            <div class="return-info-row">
                <span class="return-info-label">Reason:</span>
                <span>@Model.Reason</span>
            </div>
        </div>

        <!-- Original Sale Information -->
        <div class="original-sale">
            <div class="text-center" style="font-weight: bold; margin-bottom: 5px;">ORIGINAL SALE</div>
            <div class="return-info-row">
                <span>Invoice #:</span>
                <span>@Model.Sale?.InvoiceNumber</span>
            </div>
            <div class="return-info-row">
                <span>Sale Date:</span>
                <span>@Model.Sale?.SaleDate.ToString("dd/MM/yyyy")</span>
            </div>
            <div class="return-info-row">
                <span>Original Amount:</span>
                <span>₹@Model.Sale?.TotalAmount.ToString("N2")</span>
            </div>
            @if (Model.Sale?.DiscountPercentage > 0)
            {
                <div class="return-info-row">
                    <span>Original Discount:</span>
                    <span>@Model.Sale.DiscountPercentage.ToString("0.##")%</span>
                </div>
            }
        </div>

        <div class="separator"></div>

        <!-- Returned Items -->
        <div class="items-header">RETURNED ITEMS</div>

        @foreach (var item in Model.ReturnItems)
        {
            <div class="item">
                <div class="item-name">@item.ProductName</div>
                <div class="item-details">
                    <span>@item.ReturnQuantity.ToString("0.###") @(item.UnitOfMeasure ?? "Pcs")</span>
                    <span>₹@item.UnitPrice.ToString("N2")</span>
                </div>
                <div class="item-details">
                    <span>Subtotal:</span>
                    <span>₹@((item.UnitPrice * item.ReturnQuantity).ToString("N2"))</span>
                </div>
                @if (item.DiscountAmount > 0)
                {
                    <div class="item-details discount-info">
                        <span>Discount:</span>
                        <span>-₹@item.DiscountAmount.ToString("N2")</span>
                    </div>
                }
                @if (item.GSTAmount > 0)
                {
                    <div class="item-details">
                        <span>GST (@item.GSTRate%):</span>
                        <span>₹@item.GSTAmount.ToString("N2")</span>
                    </div>
                }
                <div class="item-details" style="font-weight: bold;">
                    <span>Item Total:</span>
                    <span>₹@item.LineTotal.ToString("N2")</span>
                </div>
            </div>
        }

        <div class="separator"></div>

        <!-- Totals -->
        <div class="totals">
            <div class="total-row">
                <span>Subtotal (@Model.ReturnItems.Count item(s)):</span>
                <span>₹@Model.SubTotal.ToString("N2")</span>
            </div>

            @if (Model.DiscountAmount > 0)
            {
                <div class="total-row discount-info">
                    <span>Total Discount:</span>
                    <span>-₹@Model.DiscountAmount.ToString("N2")</span>
                </div>
            }

            @if (Model.GSTAmount > 0)
            {
                <div class="total-row">
                    <span>Total GST:</span>
                    <span>₹@Model.GSTAmount.ToString("N2")</span>
                </div>
            }

            <div class="total-row final">
                <span>REFUND AMOUNT:</span>
                <span>₹@Model.TotalAmount.ToString("N2")</span>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Notes))
        {
            <div class="separator"></div>
            <div style="margin-bottom: 10px;">
                <div style="font-weight: bold;">Notes:</div>
                <div style="font-size: 10px;">@Model.Notes</div>
            </div>
        }

        <!-- Signature Area -->
        <div class="signature-area">
            <div class="signature-line"></div>
            <div>Customer Signature</div>
        </div>

        <!-- Footer -->
        <div class="footer">
            <div>Thank you for shopping with us!</div>
            <div>Return processed successfully</div>
            @if (Model.DiscountAmount > 0)
            {
                <div class="discount-info" style="margin-top: 5px;">
                    * Original sale discount applied proportionally
                </div>
            }
        </div>

        <!-- Print Information (hidden in print) -->
        <div class="print-info">
            <div>Return Status: @Model.Status</div>
            <div>Printed on: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</div>
            <div>Stock has been restored to inventory</div>
        </div>
    </div>

    <script>
        // Auto-print when page loads
        window.onload = function() {
            // Small delay to ensure page is fully loaded
            setTimeout(function() {
                window.print();
            }, 500);
        };

        // Handle print completion
        window.onafterprint = function() {
            // Ask if user wants to close the window
            if (confirm('Print completed. Close this window?')) {
                window.close();
            }
        };
    </script>
</body>
</html>