<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Khadi Store Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BhavenaKhadiBhavan.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Devanagari:wght@400;500;600;700&family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="indian-pattern">
    <!-- Enhanced Header with Sidebar -->
    <nav class="navbar navbar-expand-lg navbar-khadi sticky-top">
        <div class="container-fluid">
            <!-- Sidebar Toggle + Brand -->
            <div class="d-flex align-items-center">
                <button class="sidebar-toggle d-lg-inline-block" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>

                <a class="navbar-brand" href="/">
                    <div class="brand-logo">
                        <img src="https://www.khadiindia.gov.in/images/KhadiIndiaLogopsd.png"
                             alt="Khadi India Logo"
                             class="navbar-logo"
                             onerror="this.src='data:image/svg+xml;base64,';">
                    </div>
                    <div class="brand-text">
                        <div class="store-name">Bhavena Khadi Bhavan</div>
                    </div>
                </a>
            </div>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home me-1"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="salesDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-cash-register me-1"></i> Sales
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Sales")">
                                    <i class="fas fa-list me-2 text-primary"></i>
                                    <span>All Sales</span>
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Create", "Sales")">
                                    <i class="fas fa-plus me-2 text-success"></i>
                                    <span>New Sale</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="reportsDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-chart-bar me-1"></i> Reports
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Sales", "Reports")">
                                    <i class="fas fa-chart-line me-2 text-success"></i>
                                    <span>Sales Report</span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Stock", "Reports")">
                                    <i class="fas fa-boxes me-2 text-info"></i>
                                    <span>Stock Report</span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("DailySales", "Reports")">
                                    <i class="fas fa-calendar-day me-2 text-primary"></i>
                                    <span>Daily Sales</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#helpModal">
                            <i class="fas fa-question-circle me-1"></i>Help
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Enhanced Sidebar -->
    <nav class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h5 class="sidebar-title">
                <i class="fas fa-th-large"></i>
                Quick Access
            </h5>
        </div>

        <ul class="sidebar-menu">
            <li class="menu-item">
                <div class="dropdown">
                    <a class="menu-link dropdown-toggle-sidebar" href="#" data-bs-toggle="collapse" data-bs-target="#returnsSubmenu">
                        <i class="fas fa-undo-alt"></i>
                        <span>Returns</span>
                        @if (ViewBag.PendingReturns > 0)
                        {
                            <span class="badge bg-warning text-dark ms-auto">@ViewBag.PendingReturns</span>
                        }
                        <i class="fas fa-chevron-down ms-auto"></i>
                    </a>
                    <div class="collapse dropdown-menu-sidebar" id="returnsSubmenu">
                        <a class="dropdown-item-sidebar" href="@Url.Action("Index", "Returns")">
                            <i class="fas fa-list me-2"></i> All Returns
                        </a>
                        <a class="dropdown-item-sidebar" href="@Url.Action("SearchSale", "Returns")">
                            <i class="fas fa-plus me-2"></i> Process New Return
                        </a>
                    </div>
                </div>
            </li>

            <li class="menu-item">
                <div class="dropdown">
                    <a class="menu-link dropdown-toggle-sidebar" href="#" data-bs-toggle="collapse" data-bs-target="#productsSubmenu">
                        <i class="fas fa-tshirt"></i>
                        <span>Products</span>
                        <i class="fas fa-chevron-down ms-auto"></i>
                    </a>
                    <div class="collapse dropdown-menu-sidebar" id="productsSubmenu">
                        <a class="dropdown-item-sidebar" href="@Url.Action("Index", "Products")">
                            <i class="fas fa-list me-2"></i> All Products
                        </a>
                        <a class="dropdown-item-sidebar" href="@Url.Action("LowStock", "Products")">
                            <i class="fas fa-exclamation-triangle me-2"></i> Low Stock Alert
                        </a>
                        <a class="dropdown-item-sidebar" href="@Url.Action("Create", "Products")">
                            <i class="fas fa-plus me-2"></i> Add New Product
                        </a>
                    </div>
                </div>
            </li>

            <li class="menu-item">
                <div class="dropdown">
                    <a class="menu-link dropdown-toggle-sidebar" href="#" data-bs-toggle="collapse" data-bs-target="#customersSubmenu">
                        <i class="fas fa-users"></i>
                        <span>Customers</span>
                        <i class="fas fa-chevron-down ms-auto"></i>
                    </a>
                    <div class="collapse dropdown-menu-sidebar" id="customersSubmenu">
                        <a class="dropdown-item-sidebar" href="@Url.Action("Index", "Customers")">
                            <i class="fas fa-list me-2"></i> All Customers
                        </a>
                        <a class="dropdown-item-sidebar" href="@Url.Action("Create", "Customers")">
                            <i class="fas fa-user-plus me-2"></i> Add Customer
                        </a>
                        <a class="dropdown-item-sidebar" href="@Url.Action("Analytics", "Customers")">
                            <i class="fas fa-chart-pie me-2"></i> Customer Analytics
                        </a>
                    </div>
                </div>
            </li>

            <li class="menu-item">
                <div class="dropdown">
                    <a class="menu-link dropdown-toggle-sidebar" href="#" data-bs-toggle="collapse" data-bs-target="#categoriesSubmenu">
                        <i class="fas fa-tags"></i>
                        <span>Categories</span>
                        <i class="fas fa-chevron-down ms-auto"></i>
                    </a>
                    <div class="collapse dropdown-menu-sidebar" id="categoriesSubmenu">
                        <a class="dropdown-item-sidebar" href="@Url.Action("Index", "Categories")">
                            <i class="fas fa-list me-2"></i> All Categories
                        </a>
                        <a class="dropdown-item-sidebar" href="@Url.Action("Create", "Categories")">
                            <i class="fas fa-plus me-2"></i> Add Category
                        </a>
                    </div>
                </div>
            </li>

            <li class="menu-item">
                <div class="dropdown">
                    <a class="menu-link dropdown-toggle-sidebar" href="#" data-bs-toggle="collapse" data-bs-target="#reportsSubmenu">
                        <i class="fas fa-chart-bar"></i>
                        <span>Reports</span>
                        <i class="fas fa-chevron-down ms-auto"></i>
                    </a>
                    <div class="collapse dropdown-menu-sidebar" id="reportsSubmenu">
                        <a class="dropdown-item-sidebar" href="@Url.Action("Index", "Reports")">
                            <i class="fas fa-tachometer-alt me-2"></i> Reports Dashboard
                        </a>
                        <a class="dropdown-item-sidebar" href="@Url.Action("Sales", "Reports")">
                            <i class="fas fa-chart-line me-2"></i> Sales Reports
                        </a>
                        <a class="dropdown-item-sidebar" href="@Url.Action("Stock", "Reports")">
                            <i class="fas fa-boxes me-2"></i> Stock Reports
                        </a>
                        <a class="dropdown-item-sidebar" href="@Url.Action("GST", "Reports")">
                            <i class="fas fa-receipt me-2"></i> GST Reports
                        </a>
                    </div>
                </div>
            </li>
        </ul>
    </nav>

    <!-- Sidebar Overlay for Mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Main Content Area -->
    <main class="content-area" id="contentArea">
        <div class="container-fluid py-4">
            <!-- Alert Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    @TempData["Info"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <!-- Help Modal -->
    <div class="modal fade" id="helpModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-question-circle me-2"></i>Quick Help
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <h6><i class="fas fa-mouse-pointer me-2"></i>Navigation Tips:</h6>
                    <ul class="mb-3">
                        <li><strong>Dashboard:</strong> View today's sales and low stock alerts</li>
                        <li><strong>Sales:</strong> Create new sales with easy product selection</li>
                        <li><strong>Products:</strong> Manage inventory and product information</li>
                        <li><strong>Customers:</strong> Manage customer database</li>
                        <li><strong>Reports:</strong> View sales, stock, and GST reports</li>
                        <li><strong>Returns:</strong> Process customer returns</li>
                    </ul>

                    <h6><i class="fas fa-keyboard me-2"></i>Keyboard Shortcuts:</h6>
                    <ul class="mb-0">
                        <li><strong>Ctrl + N:</strong> New Sale (on sales page)</li>
                        <li><strong>Ctrl + F:</strong> Focus search box</li>
                        <li><strong>F1:</strong> Show this help</li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading Overlays -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div class="mt-2">Loading...</div>
    </div>

    <div class="processing-overlay" id="processingOverlay">
        <div class="spinner-border text-success" role="status">
            <span class="visually-hidden">Processing...</span>
        </div>
        <div class="mt-2">Processing...</div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            const sidebar = $('#sidebar');
            const sidebarToggle = $('#sidebarToggle');
            const sidebarOverlay = $('#sidebarOverlay');
            const contentArea = $('#contentArea');

            // Toggle sidebar
            sidebarToggle.on('click', function () {
                sidebar.toggleClass('active');
                sidebarOverlay.toggleClass('active');

                // Only shift content on large screens
                if ($(window).width() > 991) {
                    contentArea.toggleClass('sidebar-open');
                }
            });

            // Close sidebar when overlay is clicked
            sidebarOverlay.on('click', function () {
                sidebar.removeClass('active');
                sidebarOverlay.removeClass('active');
                contentArea.removeClass('sidebar-open');
            });

            // Handle window resize
            $(window).on('resize', function () {
                if ($(window).width() <= 991) {
                    contentArea.removeClass('sidebar-open');
                } else if (sidebar.hasClass('active')) {
                    contentArea.addClass('sidebar-open');
                }
            });

            // Close sidebar on mobile when clicking menu items
            $('.dropdown-item-sidebar, .menu-link:not(.dropdown-toggle-sidebar)').on('click', function () {
                if ($(window).width() <= 991) {
                    sidebar.removeClass('active');
                    sidebarOverlay.removeClass('active');
                }
            });

            // Help modal keyboard shortcut
            $(document).keydown(function (e) {
                if (e.key === 'F1') {
                    e.preventDefault();
                    $('#helpModal').modal('show');
                }
            });
        });

        // Global loading functions
        function showLoading() {
            $('#loadingOverlay').fadeIn();
        }

        function hideLoading() {
            $('#loadingOverlay').fadeOut();
        }

        function showProcessing() {
            $('#processingOverlay').fadeIn();
        }

        function hideProcessing() {
            $('#processingOverlay').fadeOut();
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>