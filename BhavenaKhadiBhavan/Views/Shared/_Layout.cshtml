<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Khadi Store Management</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --khadi-primary: #8B4513;
            --khadi-secondary: #D2B48C;
            --khadi-accent: #F5E6D3;
            --khadi-success: #28a745;
            --khadi-warning: #ffc107;
            --khadi-danger: #dc3545;
        }

        .navbar-brand {
            font-weight: bold;
            color: var(--khadi-primary) !important;
        }

        .btn-khadi {
            background-color: var(--khadi-primary);
            border-color: var(--khadi-primary);
            color: white;
        }

        .btn-khadi:hover {
            background-color: #654321;
            border-color: #654321;
            color: white;
        }

        .card-khadi {
            border-left: 4px solid var(--khadi-primary);
        }

        .sidebar {
            background-color: #f8f9fa;
            min-height: calc(100vh - 56px);
        }

        .nav-pills .nav-link.active {
            background-color: var(--khadi-primary);
        }

        .nav-pills .nav-link:hover {
            background-color: var(--khadi-secondary);
            color: var(--khadi-primary);
        }

        .table-khadi thead {
            background-color: var(--khadi-accent);
            color: var(--khadi-primary);
        }

        .badge-low-stock {
            background-color: var(--khadi-warning);
            color: #000;
        }

        .badge-out-stock {
            background-color: var(--khadi-danger);
        }

        .badge-in-stock {
            background-color: var(--khadi-success);
        }

        .cart-sidebar {
            background-color: #f8f9fa;
            border-left: 1px solid #dee2e6;
            height: calc(100vh - 56px);
            overflow-y: auto;
        }

        .search-box {
            border-radius: 25px;
        }

        .metric-card {
            background: linear-gradient(45deg, var(--khadi-primary), var(--khadi-secondary));
            color: white;
            border-radius: 15px;
        }

        @@media (max-width: 768px) {
            .sidebar {
                min-height: auto;
            }

            .cart-sidebar {
                height: auto;
            }
        }

        .loading {
            display: none;
        }

        .loading.show {
            display: inline-block;
        }

        /* Simple Sidebar */
        .sidebar-nav {
            position: fixed;
            top: 60px;
            left: -250px; /* Hidden by default */
            width: 250px;
            height: calc(100vh - 60px);
            background: var(--color-surface);
            border-right: 1px solid var(--color-border);
            transition: left var(--duration-normal) var(--ease-standard);
            z-index: 1000;
            overflow-y: auto;
            box-shadow: var(--shadow-lg);
            font-family: var(--font-family-base);
        }

            .sidebar-nav.active {
                left: 0; /* Visible when active */
            }

        .sidebar-header {
            padding: var(--space-16);
            border-bottom: 1px solid var(--color-border);
            background: var(--color-secondary);
        }

            .sidebar-header h6 {
                margin: 0;
                color: var(--color-text);
                font-family: var(--font-family-base);
                font-weight: var(--font-weight-medium);
                font-size: var(--font-size-base);
            }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar-menu li {
                border-bottom: 1px solid var(--color-border);
            }

            .sidebar-menu a {
                display: block;
                padding: var(--space-12) var(--space-16);
                color: var(--color-text);
                text-decoration: none;
                transition: all var(--duration-fast) var(--ease-standard);
                font-family: var(--font-family-base);
                font-size: var(--font-size-base);
            }

                .sidebar-menu a:hover {
                    background-color: var(--color-secondary-hover);
                    color: var(--color-primary);
                    text-decoration: none;
                }

                .sidebar-menu a:focus {
                    outline: var(--focus-outline);
                    outline-offset: -2px;
                }

            .sidebar-menu .badge {
                float: right;
                margin-top: var(--space-2);
                background-color: var(--color-primary);
                color: var(--color-btn-primary-text);
                font-size: var(--font-size-xs);
                padding: var(--space-2) var(--space-6);
                border-radius: var(--radius-full);
            }

        /* Sidebar Overlay */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(var(--color-slate-900-rgb), 0.5);
            z-index: 999;
            display: none;
            transition: opacity var(--duration-normal) var(--ease-standard);
        }

            .sidebar-overlay.active {
                display: block;
            }

        .no-scroll {
            overflow: hidden;
        }
    </style>
</head>
<body>
    <!-- Simple Header with Logo and Sidebar Toggle -->
    <header class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <!-- Sidebar Toggle Button -->
            <button class="btn btn-outline-secondary me-2" type="button" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Logo + Brand Name -->
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="https://www.khadiindia.gov.in/images/KhadiIndiaLogopsd.png"
                     alt="Khadi Logo" height="32" class="me-2"
                     onerror="this.src='data:image/svg+xml;base64,';">
                Bhavena Khadi Bhavan
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Sales" asp-action="Index">
                            <i class="fas fa-shopping-cart me-1"></i>Sales
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">
                            <i class="fas fa-cube me-1"></i>Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index">
                            <i class="fas fa-users me-1"></i>Customers
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <!-- Simple Sidebar -->
    <nav class="sidebar-nav" id="sidebar">
        <div class="sidebar-header">
            <h6><i class="fas fa-th-large me-2"></i>Quick Access</h6>
        </div>
        <ul class="sidebar-menu">
            <li>
                <a href="@Url.Action("Index", "Returns")">
                    <i class="fas fa-undo me-2"></i>Returns
                    @if (ViewBag.PendingReturns > 0)
                    {
                        <span class="badge bg-warning">@ViewBag.PendingReturns</span>
                    }
                </a>
            </li>
            <li>
                <a href="@Url.Action("LowStock", "Products")">
                    <i class="fas fa-exclamation-triangle me-2"></i>Low Stock
                </a>
            </li>
            <li>
                <a href="@Url.Action("Create", "Sales")">
                    <i class="fas fa-plus me-2"></i>New Sale
                </a>
            </li>
            <li>
                <a href="@Url.Action("Create", "Products")">
                    <i class="fas fa-cube me-2"></i>Add Product
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Categories")">
                    <i class="fas fa-tags me-2"></i>Categories
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Reports")">
                    <i class="fas fa-chart-bar me-2"></i>Reports
                </a>
            </li>
        </ul>
    </nav>

    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Main Content -->
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    @TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["Info"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <!-- Help Modal (Existing) -->
    <div class="modal fade" id="helpModal" tabindex="-1" role="dialog" aria-labelledby="helpModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="helpModalLabel">
                        <i class="fas fa-question-circle me-2"></i>Quick Help
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6>Navigation Tips:</h6>
                    <ul>
                        <li><strong>Dashboard:</strong> View today's sales and low stock alerts</li>
                        <li><strong>Sales:</strong> Create new sales with easy product selection</li>
                        <li><strong>Products:</strong> Manage inventory and product information</li>
                        <li><strong>Customers:</strong> Manage customer database</li>
                        <li><strong>Reports:</strong> View sales, stock, and GST reports</li>
                        <li><strong>Returns:</strong> Process customer returns</li>
                    </ul>

                    <h6>Keyboard Shortcuts:</h6>
                    <ul>
                        <li><strong>Ctrl + N:</strong> New Sale (on sales page)</li>
                        <li><strong>Ctrl + F:</strong> Focus search box</li>
                        <li><strong>F1:</strong> Show this help</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading Overlays (Existing) -->
    <div id="loadingOverlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(255,255,255,0.8); z-index: 9999; justify-content: center; align-items: center; flex-direction: column;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div class="mt-2">Loading...</div>
    </div>

    <div id="processingOverlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(255,255,255,0.8); z-index: 9999; justify-content: center; align-items: center; flex-direction: column;">
        <div class="spinner-border text-success" role="status">
            <span class="visually-hidden">Processing...</span>
        </div>
        <div class="mt-2">Processing...</div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Simple Sidebar Script -->
    <script>
        $(document).ready(function() {
            // Toggle sidebar
            $('#sidebarToggle').click(function() {
                $('#sidebar').toggleClass('active');
                $('#sidebarOverlay').toggleClass('active');
                $('body').toggleClass('no-scroll', $('#sidebar').hasClass('active'));
            });

            // Close sidebar when overlay is clicked
            $('#sidebarOverlay').click(function() {
                $('#sidebar').toggleClass('active');
                $('#sidebarOverlay').toggleClass('active');
                $('body').toggleClass('no-scroll', $('#sidebar').hasClass('active'));
            });

            // Help modal shortcut
            $(document).keydown(function(e) {
                if (e.key === 'F1') {
                    e.preventDefault();
                    $('#helpModal').modal('show');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>